<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN"
        "http://tiles.apache.org/dtds/tiles-config_2_1.dtd">

<tiles-definitions>

    <definition name="simple" template="/WEB-INF/pages/templates/simpleTemplate.jsp">
        <put-attribute name="scripts" value="/WEB-INF/pages/tiles/signinScripts.jsp"/>
        <put-attribute name="header" value="/WEB-INF/pages/tiles/simpleHeader.jsp"/>
        <put-attribute name="loginModal" value="/WEB-INF/pages/tiles/loginModal.jsp"/>
        <put-attribute name="registrationModal" value="/WEB-INF/pages/tiles/registrationModal.jsp"/>
        <put-attribute name="forgetPasswordModal" value="/WEB-INF/pages/tiles/forgetPasswordModal.jsp"/>
        <put-attribute name="footer" value="/WEB-INF/pages/tiles/footer.jsp"/>
        <put-attribute name="googleAnalytics" value="/WEB-INF/pages/tiles/googleAnalytics.jsp"/>
    </definition>

    <definition name="error" template="/WEB-INF/pages/templates/errorTemplate.jsp">
        <put-attribute name="mainScripts" value="/WEB-INF/pages/tiles/mainScripts.jsp"/>
        <put-attribute name="simpleHeader" value="/WEB-INF/pages/tiles/minimalHeader.jsp"/>
        <put-attribute name="footer" value="/WEB-INF/pages/tiles/footer.jsp"/>
        <put-attribute name="googleAnalytics" value="/WEB-INF/pages/tiles/googleAnalytics.jsp"/>
    </definition>

    <definition name="main" template="/WEB-INF/pages/templates/mainTemplate.jsp">
        <put-attribute name="mainScripts" value="/WEB-INF/pages/tiles/mainScripts.jsp"/>
        <put-attribute name="workingScripts" value="/WEB-INF/pages/tiles/workingScripts.jsp"/>
        <put-attribute name="header" value="/WEB-INF/pages/tiles/header.jsp"/>
        <put-attribute name="secondHeader" value="/WEB-INF/pages/tiles/secondHeader.jsp"/>
        <put-attribute name="messageModal" value="/WEB-INF/pages/tiles/messageModal.jsp"/>
        <put-attribute name="profileModal" value="/WEB-INF/pages/tiles/profileModal.jsp"/>
        <put-attribute name="deleteModal" value="/WEB-INF/pages/tiles/deleteModal.jsp"/>
        <put-attribute name="hideModal" value="/WEB-INF/pages/tiles/hideModal.jsp"/>
        <put-attribute name="loginModal" value="/WEB-INF/pages/tiles/loginModal.jsp"/>
        <put-attribute name="registrationModal" value="/WEB-INF/pages/tiles/registrationModal.jsp"/>
        <put-attribute name="forgetPasswordModal" value="/WEB-INF/pages/tiles/forgetPasswordModal.jsp"/>
        <put-attribute name="footer" value="/WEB-INF/pages/tiles/footer.jsp"/>
        <put-attribute name="googleAnalytics" value="/WEB-INF/pages/tiles/googleAnalytics.jsp"/>
    </definition>

    <definition name="index" extends="main">
        <put-attribute name="content" value="/WEB-INF/pages/pages/index.jsp" />
    </definition>

    <definition name="help" extends="simple">
        <put-attribute name="header" value="/WEB-INF/pages/tiles/simpleHeader.jsp"/>
        <put-attribute name="content" value="/WEB-INF/pages/pages/help.jsp" />
    </definition>

    <definition name="manifest" extends="simple">
        <put-attribute name="header" value="/WEB-INF/pages/tiles/simpleHeader.jsp"/>
        <put-attribute name="content" value="/WEB-INF/pages/pages/manifest.jsp" />
    </definition>

    <definition name="restore" extends="simple">
        <put-attribute name="content" value="/WEB-INF/pages/pages/restore.jsp" />
    </definition>

    <definition name="email" extends="simple">
        <put-attribute name="content" value="/WEB-INF/pages/pages/email.jsp" />
    </definition>

    <definition name="signin" extends="simple">
        <put-attribute name="content" value="/WEB-INF/pages/pages/signin.jsp" />
    </definition>

</tiles-definitions>